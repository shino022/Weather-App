{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        ["airbnb-base", "prettier"],
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": "warn",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": ["**/webpack.*.js"]
          }
        ]
      },
}
